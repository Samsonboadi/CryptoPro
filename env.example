# CryptoBot Pro Environment Variables
# Copy this file to .env and fill in your actual values

# Crypto.com Exchange API Credentials
CRYPTO_COM_API_KEY=your_actual_api_key_here
CRYPTO_COM_SECRET_KEY=your_actual_secret_key_here
CRYPTO_COM_SANDBOX=true

# Alternative environment variable names (any of these will work)
# API_KEY=your_actual_api_key_here
# SECRET_KEY=your_actual_secret_key_here
# SANDBOX_MODE=true

# Web Application Settings
WEB_HOST=0.0.0.0
WEB_PORT=5000
WEB_SECRET_KEY=your-secret-web-key-change-this-in-production
DEBUG=true

# Database (optional - defaults to SQLite)
# DATABASE_URL=sqlite:///data/trading_bot.db

# Examples for different environments:

# For Development (using sandbox)
# CRYPTO_COM_API_KEY=your_sandbox_api_key
# CRYPTO_COM_SECRET_KEY=your_sandbox_secret_key  
# CRYPTO_COM_SANDBOX=true
# DEBUG=true

# For Production (using live trading)
# CRYPTO_COM_API_KEY=your_live_api_key
# CRYPTO_COM_SECRET_KEY=your_live_secret_key
# CRYPTO_COM_SANDBOX=false
# DEBUG=false